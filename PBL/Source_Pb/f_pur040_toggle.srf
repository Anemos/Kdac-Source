global subroutine f_pur040_toggle (long handles, string as_toggle_mode);/////////////////////////////////////////
// * 한영키 제어 *
//
//                      2002.9.5 박병주
/////////////////////////////////////////


Long			hIMC
nvo_kor_eng_pur030	Nvo

Nvo = Create nvo_kor_eng_pur030
hIMC = Nvo.ImmGetContext( Handles )

Choose Case Mid( Upper( aS_toggle_mode ), 1, 1 )
	Case 'K'  // 한글
		Nvo.ImmSetConversionStatus( hIMC, 1, 0 )
	Case 'E'  // 영문
		Nvo.ImmSetConversionStatus( hIMC, 0, 0 )
	Case Else
		Return
End Choose

Nvo.ImmReleaseContext( Handles, hIMC )

Destroy	Nvo
end subroutine

