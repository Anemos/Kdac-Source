global type f_option_check_bpm from function_object
end type

forward prototypes
global function integer f_option_check_bpm (string a_plant, string a_div, string a_itno)
end prototypes

global function integer f_option_check_bpm (string a_plant, string a_div, string a_itno);string 	ls_div,ls_oitno[],ls_itno,ls_citno,ls_pitno,ls_chkitno[50,300],ls_kitno
integer 	i = 0,j = 0,k = 0,p = 0,ln_chk = 0

ls_itno = trim(a_itno)
ls_div  = trim(a_div)

declare optchk_cur cursor for 
  select 	"PBBPM"."BPM003"."OFITN" from "PBBPM"."BPM003"
     where 	"PBBPM"."BPM003"."OPITN" = :ls_itno AND
           	"PBBPM"."BPM003"."ODVSN" = :ls_div AND  "PBBPM"."BPM003"."OPLANT" = :a_plant AND 
    		(( trim("PBBPM"."BPM003"."OEDTE") =  ''  and "PBBPM"."BPM003"."OEDTM" <= :g_s_date ) or  
			(  trim("PBBPM"."BPM003"."OEDTE") <> ''  and "PBBPM"."BPM003"."OEDTM" <= :g_s_date  and "PBBPM"."BPM003"."OEDTE" >= :g_s_date ))
  using SQLCA ;

open optchk_cur ;
  ls_oitno[1] 	= a_itno
  i 				= 1
  do while true
    fetch optchk_cur into :ls_citno ;
    if sqlca.sqlcode <> 0 then
		exit
	 end if 
	 i 				= i + 1
    ls_oitno[i] 	= trim(ls_citno)
  loop
close optchk_cur ;

declare bom_cur cursor for 
  select 	"PBBPM"."BPM001"."PPITN" from "PBBPM"."BPM001"
     where 	"PBBPM"."BPM001"."PCITN" = :ls_pitno AND
           	"PBBPM"."BPM001"."PDVSN" = :ls_div AND  "PBBPM"."BPM001"."PLANT" = :a_plant AND
          (( trim("PBBPM"."BPM001"."PEDTE") =  ''  and "PBBPM"."BPM001"."PEDTM" <= :g_s_date ) or  
			 (  trim("PBBPM"."BPM001"."PEDTE") <> ''  and "PBBPM"."BPM001"."PEDTM" <= :g_s_date  and "PBBPM"."BPM001"."PEDTE" >= :g_s_date ))   
  using SQLCA ;

for j = 1 to i
	ls_pitno = trim(ls_oitno[j])
	k 			= 0
	open bom_cur ;  
	do while true
		fetch bom_cur into :ls_kitno ;
		if sqlca.sqlcode <> 0 then
			exit
		end if 
		p = p + 1
		k = k + 1
		if p <> 1 then
			if ls_kitno = ls_chkitno[j,k] then
				continue
			end if
		end if
		ls_chkitno[j,k] = trim(ls_kitno)
   loop
   close bom_cur ;
next

if p = 0 then return 0

for j = 2 to i
		for k = 1 to 100
			if isnull(ls_chkitno[1,k]) = true and isnull(ls_chkitno[j,k]) = true then
				exit
			end if
         if ls_chkitno[1,k] <> ls_chkitno[j,k] then
				return 1
			end if
		next
next
return 0
 
end function

